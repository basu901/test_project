<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90CAF9"
    tools:context="com.example.shaunakbasu.finalproject.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!!"
        android:id="@+id/welcome"
        android:background="@drawable/borders_welcome"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_margin="24dp"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:src="@drawable/wera_logo"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Provide details:"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:id="@+id/details" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/email_id"
        android:hint="Email Id"
        android:background="@drawable/borders_edit_login"
        android:padding="8dp"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/details"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:hint="Password"
        android:padding="8dp"
        android:background="@drawable/borders_edit_login"
        android:inputType="textPassword"
        android:layout_below="@+id/email_id"
        android:layout_alignStart="@+id/email_id"
        android:layout_marginTop="8dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:background="#0D47A1"
        android:textColor="@android:color/white"
        android:id="@+id/sign_up"
        android:layout_below="@+id/password"
        android:layout_toStartOf="@+id/sign_in"
        android:layout_marginTop="42dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:background="#0D47A1"
        android:textColor="@android:color/white"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@+id/sign_up"
        android:layout_alignEnd="@+id/password"
        android:layout_marginEnd="54dp"
        android:id="@+id/sign_in" />

</RelativeLayout>
