<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4DB6AC">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You haven't enrolled into any course."
        android:id="@+id/label1"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here's how"
        android:id="@+id/label2"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/label1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/rsz_downward_arrow"
        android:layout_below="@+id/label2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 1 ->"
        android:id="@+id/step1"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swipe screen right to view options."
        android:id="@+id/step1_content"
        android:textStyle="italic"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_alignTop="@id/step1"
        android:layout_toEndOf="@id/step1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 2 ->"
        android:id="@+id/step2"
        android:layout_below="@+id/step1"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_alignStart="@+id/step1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on 'Courses' to view courses."
        android:id="@+id/step2_content"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/step2"
        android:layout_marginLeft="2dp"
        android:textStyle="italic"
        android:textSize="15sp"
        android:layout_marginTop="2dp"
        android:layout_alignStart="@+id/step1_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 3 ->"
        android:id="@+id/step3"
        android:layout_below="@+id/step2"
        android:layout_alignStart="@+id/step2"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on interested course and enroll!"
        android:id="@+id/step3_content"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/step3"
        android:textStyle="italic"
        android:textSize="15sp"
        android:layout_marginTop="2dp"
        android:layout_alignStart="@+id/step2_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="But you can!"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/label1"
        android:layout_centerHorizontal="true" />
</RelativeLayout>