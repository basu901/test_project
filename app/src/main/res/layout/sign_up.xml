<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please provide Details : "
        android:id="@+id/s_label1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name :"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:id="@+id/s_label_first_name"
        android:layout_below="@+id/s_label1"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="66dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="First Name"
        android:ems="10"
        android:id="@+id/editText_first_name"
        android:layout_alignBottom="@+id/s_label_first_name"
        android:layout_toEndOf="@+id/s_label_first_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name : "
        android:id="@+id/s_label_last_name"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/s_label_first_name"
        android:layout_alignStart="@+id/s_label_first_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Last Name"
        android:ems="10"
        android:id="@+id/editText_last_name"
        android:layout_alignBottom="@+id/s_label_last_name"
        android:layout_alignStart="@+id/editText_first_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email :"
        android:id="@+id/s_label_email"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/s_label_last_name"
        android:layout_alignStart="@+id/s_label_last_name"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:text="Email"
        android:id="@+id/editText_email"
        android:layout_marginLeft="4dp"
        android:layout_alignBottom="@+id/s_label_email"
        android:layout_alignStart="@+id/s_label1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone No. :"
        android:id="@+id/s_label_phone"
        android:layout_below="@+id/s_label_email"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_alignStart="@+id/s_label_email"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:text="Phone"
        android:id="@+id/editText_phone"
        android:layout_alignBottom="@+id/s_label_phone"
        android:layout_toEndOf="@+id/s_label_last_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password :"
        android:id="@+id/s_label_password"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/editText_password"
        android:layout_alignStart="@+id/s_label_phone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:text="password"
        android:ems="10"
        android:id="@+id/editText_password"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/s_label_phone"
        android:layout_toEndOf="@+id/s_label_last_name"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/button"
        android:background="#1DE9B6"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"/>


</RelativeLayout>